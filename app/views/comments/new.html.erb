<%= form_for @comment do |f| %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.label :user_id %>
  <br>

  <%= f.collection_radio_buttons(
                        :user_id,
                        User.all,
                        :id,
                        :name,
                        {}
                        ) %>
  <%= f.submit %>

<% end %>