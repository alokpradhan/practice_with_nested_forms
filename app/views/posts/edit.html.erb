<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :body , id: "whatever-id" %>
  <%= f.text_area :body , class: "whatever-class" %>
  <%= f.label :tag_id %>
  <br>
  <%= f.collection_check_boxes(  
                        :tags_on_authored_post_ids, 
                        Tag.all, 
                        :id, 
                        :name, 
                         {}, 
                         ) %> 
                         <br>
 <%= f.collection_select(
                        :author_ids,
                        User.all,
                        :id,
                        :name,
                        {},
                        multiple:true )  %> 
  <%= f.submit %>

<% end %>