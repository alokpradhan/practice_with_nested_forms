<%= form_for @post do |f| %>
  <p> 
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :body %>
  <%= f.text_area :body %>
  </p>
  <p>
  <%= f.label :tag_id %>
  <br>
  <%= f.collection_check_boxes(  
                        :tags_on_authored_post_ids, 
                        Tag.all, 
                        :id, 
                        :name, 
                         {}, 
                         ) %> 
                         <br>
                         <br>
 <%= f.collection_select(
                        :author_ids,
                        User.all,
                        :id,
                        :name,
                        {},
                        multiple:true )  %> 
  </p>
  <%= f.fields_for :child_comments do |c| %>
  <br>
  <%= c.label :user_id %>
  <%= c.collection_radio_buttons(
                        :user_id,
                        User.all,
                        :id,
                        :name,
                        {}
                        ) %>
  <br>
  <%= c.label :body %>
  <%= c.text_field :body %>
  <% end %>

  <%= f.submit %>

<% end %>